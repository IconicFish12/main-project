@page "/login"
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager Navigation

<style>
    body, html {
        height: 100%;
        margin: 0;
    }

    .center-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(to bottom right, #1f3b73, #35518a);
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 16px 30px rgba(0,0,0,0.35);
        background-color: rgba(24, 40, 72, 0.9);
        width: 360px;
        padding: 30px;
    }

    .form-control {
        border-radius: 10px;
    }

    .form-label {
        font-weight: 600;
        color: white;
    }

    .btn-primary {
        background: #ffd700;
        border: none;
        font-weight: 700;
        border-radius: 50px;
        box-shadow: 0 8px 15px rgba(255, 215, 0, 0.4);
        transition: background 0.3s ease;
        color: #182848;
    }

        .btn-primary:hover {
            background: #e6c200;
            color: #121b2f;
        }

    a {
        color: #ffd700;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    h2 {
        background: linear-gradient(90deg, #ffd700, #feb236);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 900;
        text-align: center;
    }

    .text-white {
        color: white;
    }
</style>

<!-- ✅ THIS is the centering wrapper -->
<div class="center-wrapper">
    <div class="card">
        <h2>Sign In</h2>

        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <InputText id="email" class="form-control" @bind-Value="loginModel.Email" type="email" required />
            </div>

            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <InputText id="password" class="form-control" @bind-Value="loginModel.Password" type="password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
        </EditForm>

        <div class="text-center mt-2">
            <span class="text-white">Don't have an account?</span>
            <a href="/register"> Register here</a>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();

    private void HandleLogin()
    {
        // Redirect setelah login berhasil (contoh)
        Navigation.NavigateTo("/filemanager");
    }

    private class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }
}
