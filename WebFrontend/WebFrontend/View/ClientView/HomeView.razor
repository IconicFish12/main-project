@page "/"

<PageTitle>File Management App</PageTitle>

<style>
    .nav-link {
        color: #f8f9fa !important;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .nav-link:hover, .nav-link.active {
            color: #ffd700 !important;
        }

    header {
        padding: 1rem 2rem;
        backdrop-filter: saturate(180%) blur(20px);
        background: rgba(24, 40, 72, 0.8);
        box-shadow: 0 2px 12px rgb(0 0 0 / 0.5);
    }

    main {
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
        text-align: center;
    }

    .btn-primary {
        background: #ffd700;
        color: #182848;
        border: none;
        font-weight: 700;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        box-shadow: 0 8px 15px rgb(255 215 0 / 0.4);
        transition: background 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-primary:hover {
            background: #e6c200;
            color: #121b2f;
            box-shadow: 0 12px 20px rgb(230 194 0 / 0.6);
        }

    h1.display-3 {
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1rem;
        background: linear-gradient(90deg, #ffd700, #feb236);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    p.lead {
        color: #e9e7e7;
        max-width: 600px;
        margin: 0 auto 2rem;
        font-size: 1.25rem;
        font-weight: 500;
    }

    .footer {
        background: rgba(24,40,72,0.8);
        color: #f8f9fa;
        padding: 1rem 2rem;
        text-align: center;
        font-size: 0.9rem;
    }
</style>

<div>
    
    <header class="d-flex justify-content-between align-items-center">

        <a class="navbar-brand fs-3 fw-bold text-white" href="/">DriveLite</a>

        <nav>

        <ul class="nav gap-4">

            <li class="nav-item"><a class="nav-link active" href="/" @onclick='() => NavigateSection("home")' aria-current="page">Home</a></li>

            <li class="nav-item"><a class="nav-link" href="#" @onclick='() => NavigateSection("about")'>About</a></li>

            <li class="nav-item"><a class="nav-link" href="file" @onclick="AccessFileManager">File Manager</a></li>

        </ul>

        </nav>

    </header>

    <main>

        @if (currentSection == "home")

        {

            <section>

                <h1 class="display-3">Simplify Your File Management</h1>

                <p class="lead">DriveLite offers a sleek, fast, and intuitive cloud file management experience inspired by industry leaders. Manage your files anywhere, anytime.</p>

                 <button class="btn btn-primary btn-lg shadow-sm" @onclick="AccessFileManager">Get Started</button>

            </section>

        }

        else if (currentSection == "about")

        {

            <section class="container" style="max-width:800px; text-align:left;">

                <h2 class="mb-4 fw-bold">About DriveLite</h2>

                <p>DriveLite is designed with simplicity and performance in mind. Built with the latest web technologies and modern UI patterns, it helps you organize, access, and share your files easily across devices.</p>

                <p>Features include:</p>

                <ul>

                    <li>Fast uploading and downloading of files</li>

                    <li>Easy folder navigation and file previews</li>

                    <li>Search and filter capabilities</li>

                    <li>Secure and reliable data management</li>

                    <li>Responsive design for all screen sizes</li>

                </ul>

                <button class="btn btn-primary mt-3" @onclick='() => NavigateSection("home")'>Back to Home</button>

            </section>

        }

    </main>

    <footer class="footer">

        &copy; @DateTime.Now.Year DriveLite. All rights reserved.

    </footer>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



@code {
    NavigationManager? _navigationManager;

    private string currentSection = "home";


    private void NavigateSection(string section)

    {

        currentSection = section;

    }


    private void AccessFileManager()

    {

        _navigationManager?.NavigateTo("/filemanager"); // Adjust route to your file manager page

    }

}
